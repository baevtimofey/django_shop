{% extends "base.j2" %}

{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">Навигация
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item"><a class="menu-link" href="{{ url('account:account_user', request.user.pk) }}">Личный кабинет</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('account:profile_user', request.user.pk) }}">Профиль</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('account:update_shop', request.user.pk) }}">Редактировать магазин</a>
                                    </li>
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ url('imports:upload_file', request.user.pk) }}">Импорт товаров</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="#">История заказов</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">Загрузите файл формата .json</h3>

                </div>
                {% if messages %}
                    <ul class="messages">
                        {% for message in messages %}
                        <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div class="clear"></div>
                <form method="post" enctype="multipart/form-data">
                    {% csrf_token %}
                    <div>
                        {{ form.file }}
                        <div>
                        <p>Пример:</p>
                        <p>[{
                            "name": "Наименование товара",</p>
                            <p>"price": "Цена"</p>
                            <p>"in_stock": "Количество товара в наличии"
                          },</p>
                          <p>{
                            "name": "Наименование товара",</p>
                            <p>"price": "Цена"</p>
                            <p>"in_stock": "Количество товара в наличии"
                          },
                          ]</p>
                          </div>
                    </div>
                    <input type="submit" value="Загрузить" />

                    <div class="clear"></div>
                </form>
            </div>

        </div>

    </main>
{% endblock %}