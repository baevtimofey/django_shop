<div class="Section-content">
    <div class="Slider Slider_carousel">
        <header class="Section-header Section-header_close">
            <h2 class="Section-title">Ограниченный тираж
            </h2>
            <div class="Section-control">
                <div class="Slider-navigate">
                </div>
            </div>
        </header>
        <div class="Slider-box Cards">
            {% for item in limited_edition_products %}
            <div class="Slider-item">
                <div class="Slider-content">
                    <div class="Card"><a class="Card-picture" href="{{ url('products:product_detail', item.product.pk) }}">
                        <img src="{{ static('img/content/home/card.jpg') }}" alt="card.jpg" /></a>
                        <div class="Card-content">
                            <strong class="Card-title">
                                <a href="{{ url('products:product_detail', item.product.pk) }}" tabindex="-1">{{ item.product.name[:20] }}</a>
                            </strong>
                            <div class="Card-description">
                                <div class="Card-cost"><span class="Card-price">{{ item.price }}</span>
                                </div>
                                <div class="Card-category">{{ item.product.category }}
                                </div>
                                <div class="Card-hover">
                                    <a class="Card-btn" href="{{ url('cart:add_to_cart', item.product.pk) }}" tabindex="-1">
                                        <img src="{{ static('img/icons/card/cart.svg') }}" alt="cart.svg"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
