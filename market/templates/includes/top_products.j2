<div class="Section-content">
  <header class="Section-header">
    <h2 class="Section-title">
      Популярные товары
    </h2>
  </header>
  <div class="Cards">
      {% if top_products %}
        {% for item in top_products %}
        <div class="Card">
          <a class="Card-picture" href="{{ url('products:product_detail', item.product.pk) }}">
            <img src="{{ static('img/content/home/card.jpg') }}" alt="card.jpg">
          </a>
          <div class="Card-content">
            <strong class="Card-title">
              <a href="{{ url('products:product_detail', item.product.pk) }}">{{ item.product.name }}</a>
            </strong>
            <div class="Card-description">
              <div class="Card-cost">
                <span class="Card-price">
                  ${{ item.price }}
                </span>
              </div>
              <div class="Card-category">
                {{ item.product.category }}
              </div>
              <div class="Card-hover">
                <a class="Card-btn" href="{{ url('cart:add_to_cart', item.pk) }}">
                  <img src="{{ static('img/icons/card/cart.svg') }}" alt="cart.svg">
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      {% endif %}
  </div>
</div>
