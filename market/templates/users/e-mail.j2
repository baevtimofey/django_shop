{% extends "base.j2" %}

{% block content %}


            <div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">{{ _("Восстановление пароля") }} (1/2)</h3>
                    <h5>{{ _("Для восстановления пароля введите адрес электронной почты, на которую зарегистрирована учетная запись") }}</h5>
                </div>
                {% if messages %}
                    <ul class="messages">
                        {% for message in messages %}
                        <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <form action="{{ url('users:password_reset') }}" method="post">
                    {% csrf_token %}
                    <div>
                        <input class="user-input" type="email" name="email" id="name" placeholder="E-mail" />
                    </div>
                    <div>
                        <input type="submit" value="{{('Получить проверочный код') }}" />
                    </div>
                    <a class="registr" href="{{ url('users:register_user') }}">
                        {{ _("Вход") }}
                    </a>
                </form>
            </div>

        </div>

{% endblock %}