{% extends "base.j2" %}

{% block content %}

            <div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">Вход</h3>
                </div>
                {% if messages %}
                    <ul class="messages">
                        {% for message in messages %}
                        <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div class="clear"></div>
                <form action="{{ url('users:login_user') }}" method="post">
                    {% csrf_token %}
                    <div>
                        <input class="user-input" type="text" name="email" id="name" placeholder="E-mail" />
                    </div>
                    <div>
                        <input type="password" name="password" id="name" placeholder="*********" />
                    </div>
                    <div>
                        <input type="submit" value="Войти" />
                    </div>
                    <a class="forgot-label" href="{{ url('users:password_reset') }}">Забыли пароль?</a>
                    <a class="registr" href="{{ url('users:register_user') }}">
                        Регистрация
                    </a>
                </form>
            </div>

        </div>

    </main>

{% endblock %}