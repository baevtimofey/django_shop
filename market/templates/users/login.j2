{% extends "base.j2" %}

{% block content %}

            <div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">{{ _('Вход') }}</h3>
                </div>
                {% if messages %}
                    <ul class="messages">
                        {% for message in messages %}
                        <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div class="clear"></div>
                <form action="{{ url('users:login_user') }}" method="post">
                    {% csrf_token %}
                    <div>
                        {{ form.username }}
                    </div>
                    <div>
                        {{ form.password }}
                    </div>
                    <div>
                        <input type="submit" value="{{ _('Войти') }}" />
                    </div>
                    <a class="forgot-label" href="{{ url('users:password_reset') }}">{{ _('Забыли пароль?') }}</a>
                    <a class="registr" href="{{ url('users:register_user') }}">
                        {{ _('Регистрация') }}
                    </a>
                </form>
            </div>

        </div>

    </main>

{% endblock %}