{% extends "base.j2" %}

{% block content %}

    <div class="Middle Middle_top">

        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{{ _("Навигация") }}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item"><a class="menu-link" href="{{ url('account:account_user', request.user.pk) }}">{{ _("Личный кабинет") }}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('account:profile_user', request.user.pk) }}">{{ _("Профиль") }}</a>
                                    </li>
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="#">{{ _("Редактировать магазин") }}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('imports:upload_file', request.user.pk) }}">{{ _("Импорт товаров") }}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="#">{{ _("История заказов") }}</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Profile">
                        <form class="form Profile-form" method="post">
                            {% csrf_token %}
                            <div class="row">
                                <div class="row-block">
                                    <div class="form-group">
                                    </div>
{{("
                                      <div class="form-group">
                                        <label class="form-label" for="name">{{ _("Название магазина") }}
                                        </label>
                                        {{ form.name }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="description">{{ _("Описание") }}
                                        </label>
                                        {{ form.description }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="address">{{ _("Адрес") }}
                                        </label>
                                        {{ form.address }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="phone">{{ _("Номер телефона") }}
                                        </label>
                                        {{ form.phone_number }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="mail">{{ _("E-mail") }}
                                        </label>
                                        {{ form.email }}
                                    </div>

                                    <div class="form-group">
                                        <div class="Profile-btn">
                                            <button class="btn btn_success" type="submit">{{ _("Сохранить") }}
                                            </button>
                                        </div>
                                        <div class="Profile-success">
                                        {% if messages %}
                                            <ul class="messages">
                                                {% for message in messages %}
                                                <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}